{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ES2022",
      "ESNext"
    ],
    "module": "commonjs",
    "moduleResolution": "Node16",
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
